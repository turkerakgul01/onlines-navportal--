@{
    Layout = "_EmptyLayout";
    List<Exam> exams = ViewBag.exams;
}
@model List<ExamResult>
@Html.ActionLink("Matematik vize Sınavına Git","Sinavlar",new{ExamID=1,id=TempData["User"].ToString()})
<br />
@Html.ActionLink("Kimya vize sınavına git Git","Sinavlar",new{ExamID=4,id=TempData["User"].ToString()})
<br />
@Html.ActionLink("Matematik final sınavına git Git","Sinavlar",new{ExamID=5,id=TempData["User"].ToString()})

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
                <tr>
                    <th>Doğru Sayısı</th>
                    <th>Yanlış Sayısı</th>
                    <th>Puan</th>
                    <th class="hidden-phone">Sınav/Ders Adı</th>
                    
                </tr>
            </thead>
            <tbody>
                @if (Model!=null)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="gradeX">

                            <td>@item.CorrectCount</td>
                            <td class="center hidden-phone">@item.WrongCount</td>
                            <td class="center hidden-phone">@item.Result</td>
                            @{
                                string deger = exams.FirstOrDefault(x => x.ExamId == item.ExamId).ExamName;
                            }

                            <td class="center hidden-phone">@deger</td>



                        </tr>
                    }
                }
               
            </tbody>
        </table>

    </div>
</div>